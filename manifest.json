
{
  "manifest_version": 2,

    "name": "KKBOX chrome player",
    "description": "play kkbox and spotify in chrome extension, and type 'kkbox' in search bar will show special item",
    "version": "1.0",
    "background": {
      "scripts": ["js/url.js", "js/require.js", "background.js"]
    },
    "omnibox": { "keyword" : "kkbox"},
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "http://*/",
      "tabs"
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}

